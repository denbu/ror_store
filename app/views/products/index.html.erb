<p id="notice"><%= notice %></p>
<h1>Список книг</h1>
    <% @products.each do |product| %>
       <div class="row">
           <div class="col-md-2 col-sm-2 col-lg-2">
               <%= image_tag(product.image_url, class: 'img-thumbnail') %>
           </div>
           <div class="col-md-9 col-sm-9 col-lg-9">
               <h2><%= product.title %></h2>
               <p><%= truncate(strip_tags(product.description), length: 80) %></p>
           </div>
           <div class="col-md-1 col-sm-1 col-lg-1">
                <%= link_to 'Show', product, class: 'btn btn-info' %>
                <br>
                <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-warning' %>
                <br>
                <%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete, class: 'btn btn-danger' %>
           </div>
        </div>
        <br>
    <% end %>
<br>
<%= link_to 'New Product', new_product_path, class: 'btn btn-success'%>